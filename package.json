{
  "name": "@knovator/masters-node",
  "version": "1.3.4",
  "license": "MIT",
  "author": "knovator (https://knovator.com/)",
  "description": "NodeJS backend for @knovator/masters",
  "main": "dist/index.js",
  "module": "dist/masters-node.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:knovator/masters-node.git"
  },
  "keywords": [
    "masters",
    "nodejs",
    "mongodb"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "peerDependencies": {
    "express": "*",
    "mongoose": "*"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/masters-node.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/masters-node.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/joi": "^17.2.3",
    "@types/mongoose-unique-validator": "^1.0.6",
    "@types/node": "^18.0.3",
    "dts-cli": "^1.5.1",
    "express": "^4.18.1",
    "husky": "^8.0.1",
    "mongoose": "^6.4.3",
    "size-limit": "^7.0.8",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "express-list-endpoints-descriptor": "^1.0.13",
    "joi": "^17.6.0",
    "mongoose-paginate-v2": "^1.7.0",
    "mongoose-unique-validator": "^3.1.0"
  }
}
